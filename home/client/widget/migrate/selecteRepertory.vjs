            }
        },
        props: ['sites', 'paths', 'allpaths'],
        watch:{
            site(nval, oval){
                this.paths = this.allpaths.filter(function(item, key){
                    // 站点等于当前所选择的站点，且未迁移
                    if(item.site === nval && !item.migrate){
                        return true;
                    }
                    return false;
                })
            }
        }
